<h1 class="text-3xl font-bold text-center mb-8 text-primary-700">Edit User</h1>

<div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg">
  <%= form_with model: @user, local: true do |f| %>
    <div class="mb-6">
      <%= f.label :first_name, "First Name", class: "label font-semibold text-gray-700" %>
      <%= f.text_field :first_name, class: "input input-bordered w-full py-2 px-3 rounded-md" %>
    </div>

    <div class="mb-6">
      <%= f.label :last_name, "Last Name", class: "label font-semibold text-gray-700" %>
      <%= f.text_field :last_name, class: "input input-bordered w-full py-2 px-3 rounded-md" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, "Email", class: "label font-semibold text-gray-700" %>
      <%= f.email_field :email, class: "input input-bordered w-full py-2 px-3 rounded-md" %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Update User", class: "btn btn-primary py-2 px-6 rounded-md" %>
      <%= link_to "Back", users_path, class: "btn btn-outline py-2 px-6 rounded-md" %>
    </div>
  <% end %>
</div>
