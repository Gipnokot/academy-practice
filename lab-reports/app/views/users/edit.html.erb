<h1 class="text-3xl font-bold text-center mb-8 text-blue-700">Edit User</h1>

<div class="max-w-lg mx-auto bg-white border border-gray-300 p-8 rounded-lg shadow-lg">
  <%= form_with model: @user, local: true do |f| %>
    <div class="mb-6">
      <%= f.label :first_name, "First Name", class: "label font-semibold text-gray-900" %>
      <%= f.text_field :first_name, class: "input input-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :last_name, "Last Name", class: "label font-semibold text-gray-900" %>
      <%= f.text_field :last_name, class: "input input-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, "Email", class: "label font-semibold text-gray-900" %>
      <%= f.email_field :email, class: "input input-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Update User", class: "btn bg-green-500 text-white py-2 px-6 rounded-md shadow-md hover:bg-green-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
      <%= link_to "Back", users_path, class: "btn bg-gray-500 text-white py-2 px-6 rounded-md shadow-md hover:bg-gray-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50" %>
    </div>
  <% end %>
</div>
