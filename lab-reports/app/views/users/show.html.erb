<h1 class="text-4xl font-bold text-center text-primary-700 mb-6">User: <%= @user.first_name %> <%= @user.last_name %></h1>

<h2 class="text-2xl font-semibold text-center text-gray-800 mb-4">Lab Reports</h2>

<div class="bg-white p-6 rounded-lg shadow-lg">
  <% if @user.lab_reports.any? %>
    <ul class="list-disc pl-6 space-y-3">
      <% @user.lab_reports.each do |report| %>
        <li>
          <%= link_to report.title, lab_report_path(report), class: "text-primary-600 font-semibold hover:text-primary-800 hover:underline" %> 
          - <span class="text-gray-600"><%= report.grade || "Not Rated" %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No lab reports yet.</p>
  <% end %>
</div>

<div class="mt-8 text-center">
  <%= link_to "Back", users_path, class: "btn btn-outline py-2 px-6 rounded-md text-primary-700 hover:text-white hover:bg-primary-700" %>
</div>
