<h1 class="text-4xl font-bold text-center text-blue-700 mb-6">User: <%= @user.first_name %> <%= @user.last_name %></h1>

<h2 class="text-2xl font-semibold text-center text-gray-900 mb-4">Lab Reports</h2>

<div class="bg-white border border-gray-300 p-6 rounded-lg shadow-lg">
  <% if @user.lab_reports.any? %>
    <ul class="list-disc pl-6 space-y-3">
      <% @user.lab_reports.each do |report| %>
        <li>
          <%= link_to report.title, lab_report_path(report), class: "text-blue-600 font-semibold hover:text-blue-800 hover:underline focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %> 
          - <span class="text-gray-900"><%= report.grade || "Not Rated" %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-900">No lab reports yet.</p>
  <% end %>
</div>

<div class="mt-8 text-center">
  <%= link_to "Back", users_path, class: "bg-gray-500 text-white py-2 px-6 rounded-md shadow-md hover:bg-gray-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50" %>
</div>
