<h1 class="text-4xl font-bold text-center text-blue-700 mb-8">Lab Report: <%= @lab_report.title %></h1>

<div class="max-w-4xl mx-auto bg-white border border-gray-300 p-8 rounded-lg shadow-md">
  <div class="space-y-6">

    <div>
      <h2 class="text-2xl font-semibold text-green-700">Description:</h2>
      <p class="text-lg text-gray-900"><%= @lab_report.description %></p>
    </div>

    <div>
      <h2 class="text-2xl font-semibold text-green-700 mt-6">Grade:</h2>
      <p class="text-lg text-gray-900"><%= @lab_report.grade || "Not Rated" %></p>
    </div>

    <div>
      <h2 class="text-2xl font-semibold text-green-700 mt-6">Author:</h2>
      <p class="text-lg text-gray-900"><%= @lab_report.user.first_name %> <%= @lab_report.user.last_name %> (<%= @lab_report.user.email %>)</p>
    </div>

    <div class="mt-8 flex gap-4 justify-center">
      <%= link_to 'Edit', edit_lab_report_path(@lab_report), class: "btn bg-blue-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-blue-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 text-center" %>
      <%= link_to 'Back', lab_reports_path, class: "btn bg-gray-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-gray-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 text-center" %>
    </div>
  </div>
</div>
