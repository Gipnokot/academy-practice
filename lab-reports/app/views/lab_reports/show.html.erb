<h1 class="text-4xl font-bold text-center text-primary-700 mb-8">Lab Report: <%= @lab_report.title %></h1>

<div class="max-w-4xl mx-auto bg-base-200 p-8 rounded-lg shadow-lg">
  <div class="space-y-6">

    <div>
      <h2 class="text-2xl font-semibold text-secondary">Description:</h2>
      <p class="text-lg text-gray-700"><%= @lab_report.description %></p>
    </div>

    <div>
      <h2 class="text-2xl font-semibold text-secondary mt-6">Grade:</h2>
      <p class="text-lg text-gray-700"><%= @lab_report.grade || "Not Rated" %></p>
    </div>

    <div>
      <h2 class="text-2xl font-semibold text-secondary mt-6">Author:</h2>
      <p class="text-lg text-gray-700"><%= @lab_report.user.first_name %> <%= @lab_report.user.last_name %> (<%= @lab_report.user.email %>)</p>
    </div>

    <div class="mt-8 flex gap-4 justify-center">
      <%= link_to 'Edit', edit_lab_report_path(@lab_report), class: "btn btn-primary py-3 px-6 text-lg" %>
      <%= link_to 'Back', lab_reports_path, class: "btn btn-secondary py-3 px-6 text-lg" %>
    </div>
  </div>
</div>
