<h1 class="text-3xl font-bold text-center mb-8 text-blue-700">Edit Lab Report: <%= @lab_report.title %></h1>

<div class="max-w-lg mx-auto bg-white border border-gray-300 p-8 rounded-lg shadow-lg">
  <%= form_with model: @lab_report, local: true do |f| %>
    <div class="mb-6">
      <%= f.label :title, "Lab Title", class: "label font-semibold text-gray-900" %>
      <%= f.text_field :title, required: true, class: "input input-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :description, "Lab Description", class: "label font-semibold text-gray-900" %>
      <%= f.text_area :description, class: "textarea textarea-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :grade, "Grade", class: "label font-semibold text-gray-900" %>
      <%= f.select :grade, LabReport::GRADES.map { |grade| [grade, grade] }, include_blank: "Not Rated", class: "select select-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Update Lab Report", class: "btn bg-green-500 text-white py-2 px-6 rounded-md shadow-md hover:bg-green-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
      <%= link_to "Back", lab_reports_path, class: "btn bg-gray-500 text-white py-2 px-6 rounded-md shadow-md hover:bg-gray-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50" %>
    </div>
  <% end %>
</div>
