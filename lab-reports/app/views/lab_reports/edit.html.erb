<h1 class="text-4xl font-bold text-center text-primary-700 mb-8">Edit Lab Report: <%= @lab_report.title %></h1>

<%= form_with model: @lab_report, local: true, class: "space-y-6" do |f| %>
  <div class="form-control">
    <%= f.label :title, "Lab Title", class: "label font-semibold" %>
    <%= f.text_field :title, required: true, class: "input input-bordered w-full", value: @lab_report.title %>
  </div>

  <div class="form-control">
    <%= f.label :description, "Lab Description", class: "label font-semibold" %>
    <%= f.text_area :description, class: "textarea textarea-bordered w-full", value: @lab_report.description %>
  </div>

  <div class="form-control">
    <%= f.label :grade, "Grade", class: "label font-semibold" %>
    <%= f.select :grade, LabReport::GRADES.map { |grade| [grade, grade] }, include_blank: "Not Rated", class: "select select-bordered w-full", selected: @lab_report.grade %>
  </div>

  <div class="mt-8">
    <%= f.submit "Update Lab Report", class: "btn btn-success w-full text-lg shadow-lg hover:shadow-xl" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= link_to "Back to Lab Reports", lab_reports_path, class: "btn btn-outline py-2 px-6 rounded-md text-primary-700 hover:bg-primary-700 hover:text-white" %>
</div>
