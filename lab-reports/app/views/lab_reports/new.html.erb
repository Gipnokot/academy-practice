<h1 class="text-4xl font-bold text-center text-blue-700 mb-8">Create New Lab Report</h1>
<div class="max-w-3xl mx-auto bg-white border border-gray-300 p-8 rounded-lg shadow-md">
  <%= form_with model: @lab_report, local: true do |f| %>
    <div class="form-control mb-6">
      <%= f.label :title, "Lab Title", class: "label font-semibold text-gray-900" %>
      <%= f.text_field :title, required: true, class: "input input-bordered w-full border-gray-300 bg-white text-gray-800" %>
    </div>
    <div class="form-control mb-6">
      <%= f.label :description, "Lab Description", class: "label font-semibold text-gray-900" %>
      <%= f.text_area :description, class: "textarea textarea-bordered w-full border-gray-300 bg-white text-gray-800" %>
    </div>
    <div class="form-control mb-6">
      <%= f.label :grade, "Grade", class: "label font-semibold text-gray-900" %>
      <%= f.select :grade, LabReport::GRADES.map { |grade| [grade, grade] }, include_blank: "Not Rated", class: "select select-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-md" do |s| %>
        <% LabReport::GRADES.each do |grade| %>
          <option class="text-gray-900" value="<%= grade %>"><%= grade %></option>
        <% end %>
      <% end %>
    </div>
    <div class="form-control mb-6">
      <%= f.label :user_id, "Select Student", class: "label font-semibold text-gray-900" %>
      <%= f.select :user_id, User.all.collect { |u| [u.first_name + " " + u.last_name, u.id] }, include_blank: true, class: "select select-bordered w-full border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-md" do |s| %>
        <% User.all.each do |u| %>
          <option class="text-gray-900" value="<%= u.id %>"><%= u.first_name + " " + u.last_name %></option>
        <% end %>
      <% end %>
    </div>
    <div class="mt-8 flex justify-between gap-4">
      <%= f.submit "Create Lab Report", class: "btn bg-green-500 text-white py-2 px-6 rounded-md shadow-md hover:bg-green-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
      <%= link_to "Back", lab_reports_path, class: "btn bg-gray-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-gray-600 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 text-center" %>
    </div>
  <% end %>
</div>
