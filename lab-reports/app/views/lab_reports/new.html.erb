<h1 class="text-4xl font-bold text-center text-primary-700 mb-8">Create New Lab Report</h1>

<div class="max-w-3xl mx-auto bg-base-200 p-8 rounded-lg shadow-lg">
  <%= form_with model: @lab_report, local: true do |f| %>

    <div class="form-control mb-6">
      <%= f.label :title, "Lab Title", class: "label font-semibold text-gray-700" %>
      <%= f.text_field :title, required: true, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :description, "Lab Description", class: "label font-semibold text-gray-700" %>
      <%= f.text_area :description, class: "textarea textarea-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :grade, "Grade", class: "label font-semibold text-gray-700" %>
      <%= f.select :grade, LabReport::GRADES.map { |grade| [grade, grade] }, include_blank: "Not Rated", class: "select select-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :user_id, "Select User", class: "label font-semibold text-gray-700" %>
      <%= f.select :user_id, User.all.collect { |u| [u.first_name + " " + u.last_name, u.id] }, include_blank: true, class: "select select-bordered w-full" %>
    </div>

    <div class="mt-8 flex justify-between gap-4">
      <%= f.submit "Create Lab Report", class: "btn btn-success flex-1 py-3 px-6 text-lg" %>
      <%= link_to "Back", lab_reports_path, class: "btn btn-secondary flex-1 py-3 px-6 text-lg" %>
    </div>
  <% end %>
</div>
